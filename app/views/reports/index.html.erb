<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table class="table">
  <thead>
    <tr>
      <th>Author</th>
      <th>Group</th>
      <th>Created</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.author %></td>
        <td><%= report.group %></td>
        <td><%= report.created_at %></td>
        <td>
          <%= link_to 'View', event_report_path(@event, report) %>
          <%= link_to 'Edit', edit_event_report_path(@event, report) %>
          <%= link_to 'Delete', event_report_path(@event, report), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Report', new_event_report_path, class: "btn btn-primary" %>
<%= link_to 'Back to Event', event_path(@event), class: "btn btn-default" %>