<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Event Type</th>
      <th>Venue</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @events.order_by_created_at.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.category.capitalize %></td>
        <td><%= event.venue %></td>
        <td>
          <%= link_to 'View', event_path(event) %>
          <%= link_to 'Edit', edit_event_path(event) %>
          <%= link_to 'Summary', generate_summary_event_path(event, format: 'pdf'), method: :post %>
          <%= link_to 'Delete', event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Event', new_event_path, class: "btn btn-primary" %>
<%= link_to 'Back to Dashboard', root_path, class: "btn btn-default" %>