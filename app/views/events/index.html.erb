<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Event Type</th>
      <th>Venue</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @events.order_by_created_at.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.category.capitalize %></td>
        <td><%= event.venue %></td>
        <td>
          <%= link_to event_path(event) do %>
            <i style="font-size:1.5em;" class="glyphicon glyphicon-eye-open" title="View"></i>
          <% end %>
          <%= link_to edit_event_path(event) do %>
            <i style="font-size:1.5em;" class="glyphicon glyphicon-edit" title="Edit"></i>
          <% end %>
          <%= link_to summary_event_path(event) do %>
            <i style="font-size:1.5em;" class="glyphicon glyphicon-signal" title="Summary"></i>
          <% end %>
          <%= link_to event_reports_path(event) do %>
            <i style="font-size:1.5em;" class="glyphicon glyphicon-th-list" title="Reports"></i>
          <% end %>
          <!-- <%= link_to 'PDF', generate_summary_event_path(event, format: 'pdf'), method: :post %> -->
          <%= link_to event_path(event), method: :delete, data: { confirm: 'Confirm DELETE?' } do %>
            <i style="font-size:1.5em;" class="glyphicon glyphicon-trash" title="Delete"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Event', new_event_path, class: "btn btn-primary" %>
<%= link_to 'Back to Dashboard', root_path, class: "btn btn-default" %>