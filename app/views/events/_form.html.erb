<%= simple_form_for [@event] do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  </br>
  <div class="form-horizontal">
    <div class="form-group">
      <label for="date" class="col-sm-2">Event Date</label>
      <div class="col-sm-10" ><%= f.text_field :date, class: "form-control" %></div>
    </div>

    <div class="form-group">
      <label for="type" class="col-sm-2">Event Type</label>
      <div class="col-sm-10">
        <%= f.input :category, 
            as: :select,
            collection: Event::CATEGORY,
            include_blank: false,
            label: false %>
      </div>
    </div>

    <div class="form-group">
      <label for="date" class="col-sm-2">Venue</label>
      <div class="col-sm-10"><%= f.text_field :venue, class: "form-control" %></div>
    </div>

    <div class="form-group">
      <label for="date" class="col-sm-2">Prayer Start:</label>
      <div class="col-sm-10"><%= f.text_field :prayer_count_1, class: "form-control" %></div>
    </div>

    <div class="form-group">
      <label for="date" class="col-sm-2">Prayer End:</label>
      <div class="col-sm-10"><%= f.text_field :prayer_count_2, class: "form-control" %></div>
    </div>

    <div class="form-group">
      <label for="date" class="col-sm-2">Service Start:</label>
      <div class="col-sm-10"><%= f.text_field :head_count_1, class: "form-control" %></div>
    </div>

    <div class="form-group">
      <label for="date" class="col-sm-2">Service End:</label>
      <div class="col-sm-10"><%= f.text_field :head_count_2, class: "form-control" %></div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to 'Back to Events', events_path, class: "btn btn-default" %>
  </div>
<% end %>