<p id="notice"><%= notice %></p>

<div class="row" >
  <div class="col-sm-2"><label for="date"><b>Event Date:</b></label></div>
  <div class="col-sm-10"><%= @event.date %></div>
</div>

<div class="row" >
  <div class="col-sm-2"><label for="category"><b>Event Type:</b></label></div>
  <div class="col-sm-10"><%= @event.category.capitalize %></div>
</div>

<div class="row" >
  <div class="col-sm-2"><label for="venue"><b>Venue:</b></label></div>
  <div class="col-sm-10"><%= @event.venue %></div>
</div>

<div class="row" >
  <div class="col-sm-2"><label for="prayer_count_1"><b>Prayer Start:</b></label></div>
  <div class="col-sm-10"><%= @event.prayer_count_1 %></div>
</div>

<div class="row" >
  <div class="col-sm-2"><label for="prayer_count_2"><b>Prayer End:</b></label></div>
  <div class="col-sm-10"><%= @event.prayer_count_2 %></div>
</div>

<div class="row" >
  <div class="col-sm-2"><label for="head_count_1"><b>Service Start:</b></label></div>
  <div class="col-sm-10"><%= @event.head_count_1 %></div>
</div>

<div class="row" >
  <div class="col-sm-2"><label for="head_count_2"><b>Service End:</b></label></div>
  <div class="col-sm-10"><%= @event.head_count_2 %></div>
</div>

<div class="row" >
  <div class="col-sm-2"><label for="total"><b>Total Present:</b></label></div>
  <div class="col-sm-10"><%= @event.attendances.count %></div>
</div>

</br>

<div class="actions">
    <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-info" %>
    <%= link_to 'Delete', event_path(@event), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Reports', event_reports_path(@event), class: "btn btn-warning" %>
    <%= link_to 'Back to Events', events_path, class: "btn btn-default" %>
</div>

<h3>Attendees</h3>

<div class="dropdown">
  Filter By 
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownAttendeeGrp" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Group
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownAttendeeGrp">
    <li><%= link_to "None", filter_attendees_event_path(@event, group: ""), remote:true %></li>
    <% AttendeeGroup.all.each do |group| %>
      <li><%= link_to group.name, filter_attendees_event_path(@event, group: group.id), remote:true %></li>
    <% end %>
  </ul></br></br>
</div>

<%= render "events/attendees", event: @event %>



