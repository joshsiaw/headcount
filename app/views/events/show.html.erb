<p id="notice"><%= notice %></p>

<div class="row" >
  <div class="col-sm-2"><label for="date"><b>Event Date:</b></label></div>
  <div class="col-sm-10"><%= @event.date %></div>
</div>

<div class="row" >
  <div class="col-sm-2"><label for="category"><b>Event Type:</b></label></div>
  <div class="col-sm-10"><%= @event.category %></div>
</div>

<div class="row" >
  <div class="col-sm-2"><label for="venue"><b>Venue:</b></label></div>
  <div class="col-sm-10"><%= @event.venue %></div>
</div>

<h3>Present</h3>

<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Contact No.</th>
      <th>Age</th>
      <th>Category</th>
      <th>Group</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @event.attendees.each do |attendee| %>
      <tr>
        <td><%= attendee.first_name %></td>
        <td><%= attendee.last_name %></td>
        <td><%= attendee.contact_no %></td>
        <td><%= attendee.age %></td>
        <td><%= attendee.category %></td>
        <td><%= attendee.group %></td>
        <td>
          <%= link_to 'Remove', event_attendance_path(@event, Attendance.find_attendance(@event.id, attendee.id)), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Add Attendees</h3></br>

<div class="dropdown">
  Filter By 
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownAttendeeGrp" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Group
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownAttendeeGrp">
    <% Attendee::GROUP.each do |group| %>
      <li><%= link_to group[0], filter_attendees_event_path(@event, group: group[1]), remote:true %></li>
    <% end %>
  </ul></br></br>
</div>

<%= render "events/add_attendees", event: @event, new_attendees: @new_attendees %>


<div class="actions">
    <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-info" %>
    <%= link_to 'Delete', event_path(@event), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Reports', event_reports_path(@event), class: "btn btn-warning" %>
    <%= link_to 'Back to Events', events_path, class: "btn btn-default" %>
</div>